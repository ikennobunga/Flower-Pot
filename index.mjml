      <!-- <mj-class name="dark-mode" color="#212529"/> -->
      <mj-image padding="0"/>
      <mj-section padding="0" background-color="#fff"/>
      <mj-button color="#031F2A" background-color="#fff" font-size="14px" align="center" padding="15px 20px" height="40px" border="2px solid #031F2A" border-radius="10px" text-transform="uppercase" letter-spacing="2px"/>
    </mj-attributes>

    <mj-style>
      :root {
        color-scheme: light dark;
        supported-color-schemes: light dark;
      }
      
      @media (prefers-color-scheme: dark) {
        .dark-mode > table {
          background-color: #212529 !important;
        }
         [data-ogsc] .dark-mode > table {
          background-color: #212529 !important;
        }

        .dark-logo {
          display: none !important;
        }
        [data-ogsc] .dark-logo {
          display: none !important;
        }

        .dark-mode-text {
          color: #E2ECEB;
        }
        [data-ogsc] .dark-mode-text {
          color: #E2ECEB;
        }
      }
      
      @media (max-width: 480px) {
        .heading-plants {
          text-align: center !important;
          line-height: 44px;
        }
      }
    </mj-style>
  </mj-head>

